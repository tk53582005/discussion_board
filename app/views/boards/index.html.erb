<div class="mb-6 flex justify-between items-center">
  <h1 class="text-3xl font-bold text-gray-900">ボード一覧</h1>
  <%= link_to "新しいボードを作成", new_board_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @boards.each do |board| %>
    <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
      <h2 class="text-xl font-bold text-gray-900 mb-2">
        <%= link_to board.title, board_path(board), class: "hover:text-blue-600" %>
      </h2>
      <p class="text-gray-600 mb-4"><%= truncate(board.description, length: 100) %></p>
      
      <div class="text-sm text-gray-500 mb-4">
        <p>作成者: <%= board.user.email %></p>
        <p>作成日: <%= board.created_at.strftime("%Y年%m月%d日") %></p>
      </div>
      
      <% if board.user == current_user %>
        <div class="flex space-x-2">
          <%= link_to "編集", edit_board_path(board), class: "text-blue-600 hover:text-blue-800" %>
          <%= link_to "削除", board_path(board), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "text-red-600 hover:text-red-800" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>