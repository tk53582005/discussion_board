<h1>ボード一覧</h1>

<%= link_to "新しいボードを作成", new_board_path %>

<% @boards.each do |board| %>
  <div>
    <h2><%= link_to board.title, board_path(board) %></h2>
    <p><%= board.description %></p>
    <p>作成者: <%= board.user.email %></p>
    <p>作成日: <%= board.created_at.strftime("%Y年%m月%d日") %></p>
    
    <% if board.user == current_user %>
      <%= link_to "編集", edit_board_path(board) %>
      <%= link_to "削除", board_path(board), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" } %>
    <% end %>
  </div>
  <hr>
<% end %>